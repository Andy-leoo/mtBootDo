<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.bj.train.dao.ModuleDao">

    <select id="list" resultType="com.bj.train.pojo.Module">
        SELECT
        *
        FROM
        module
        ORDER BY
        create_time DESC
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    <select id="count" resultType="int">
        SELECT
        count(*)
        FROM
        module
        ORDER BY
        create_time DESC
    </select>

    <update id="update" parameterType="com.bj.train.pojo.Module">
        update module
        <set>
            <if test="title != null">`title` = #{title}, </if>
            <if test="detail != null">`detail` = #{detail}, </if>
            <if test="modules != null">`modules` = #{modules}, </if>
            <if test="operato_time != null">`operato_time` = #{operato_time}, </if>
            <if test="operator != null">`operator` = #{operator}, </if>
        </set>
        where id = #{id}
    </update>

    <insert id="save" parameterType="com.bj.train.pojo.Module" useGeneratedKeys="true" keyProperty="id">
		insert into module
		(
			`title`,
			`detail`,
			`modules`,
			`create_time`,
			`creater`,
			`operato_time`,
			`operator`
		)
		values
		(
			#{title},
			#{detail},
			#{modules},
			#{createTime},
			#{creater},
			#{operatoTime},
			#{operator}
		)
	</insert>

    <delete id="remove">
		delete from module where id = #{id}
	</delete>
</mapper>